@model List<Crypts_And_Coders.Models.DTOs.LocationDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <title>Locations</title>
    <link rel="stylesheet" href="~/Styles/StyleSheet.css" type="text/css" />
</head>

<body>
    <header>
        <div class="dropdown show">
            <a class="btn btn-secondary" href="Home">Home</a>
            <a class="btn btn-secondary" href="CharactersView">Characters</a>
            <a class="btn btn-secondary" href="#">Locations</a>
            <a class="btn btn-secondary" href="EnemiesView">Enemies</a>
            <a class="btn btn-secondary" href="ItemsView">Items</a>
            <a class="btn btn-secondary" href="LogView">Logs</a>
            <a class="btn btn-secondary" href="WeaponsView">Weapons</a>
            <a class="btn btn-secondary" href="AboutUs">About Us</a>
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="LocationsView/Create">Create</a>
            </div>
        </div>
    </header>

    <main>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3">
                    <h3>@item.Name</h3>
                    <p>Description: @item.Description</p>
                    <span>Enemies: </span>
                    @foreach (var enemy in item.Enemies)
                    {
                        <span>@enemy.Species, </span>
                    }
                    <p>
                        <a asp-action="Delete" asp-route-ID="@item.Id"
                           class="btn btn-danger m-1">Delete</a>
                    </p>
                </div>
            }
        </div>
    </main>

    <footer>
    </footer>
</body>
</html>