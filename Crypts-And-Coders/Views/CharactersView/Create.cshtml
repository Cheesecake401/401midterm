@model Crypts_And_Coders.Models.DTOs.CharacterDTO

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <title>Enemies</title>
    <link rel="stylesheet" href="~/Styles/StyleSheet.css" type="text/css" />
</head>
<body>
    <h4 class="create-title">Character Creation</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WeaponId" class="control-label"></label>
                    <input asp-for="WeaponId" class="form-control" />
                    <span asp-validation-for="WeaponId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocationId" class="control-label"></label>
                    <input asp-for="LocationId" class="form-control" />
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Species</label>
                    <select class="form-control">
                        @foreach (var speciesName in Enum.GetValues(typeof(Crypts_And_Coders.Models.SpeciesAndClass.Species)))
                        {
                            <option> @speciesName.ToString() </option>
                            if (speciesName.ToString() == "Tiefling") break;
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Class</label>
                    <select class="form-control">
                        @foreach (var className in Enum.GetValues(typeof(Crypts_And_Coders.Models.SpeciesAndClass.Class)))
                        {
                            <option>@className.ToString()</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>